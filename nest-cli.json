{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "builder": "tsc",
    "assets": [
      {
        "watchAssets": true,
        "include": "src/infrastructure/i18n/locales",
        "outDir": "dist/infrastructure/i18n/locales"
      }
    ]
  }
}